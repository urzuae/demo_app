<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html>
  <head>
    <title><%= h(yield(:title) || "Demo App") %></title>
    <%= stylesheet_link_tag 'application' %>
    <%= javascript_include_tag :defaults %>
    <%= yield(:head) %>
  </head>
  <body>
    <div id="container">
      <div id="first_column">
        <div id="main_menu">
            <div id="users">
              <a class="menu_header" href="/users">Users</a>
              <ul>
                <li><a href="/users">Index</a></li>
                <li><a href='/users/new'>New User</a></li>
              </ul>
            </div>
            <div id="microposts">
              <a class="menu_header" href="/microposts">Microposts</a>
              <ul>
                <li><a href="/microposts">Index</a></li>
                <li><a href="/microposts/new">New Micropost</a></li>
              </ul>
            </div>
        </div>
        <div id="cloud">
          <% tag_cloud (tag_cloud_render, %w[css1 css2 css3 css4]) do |tag, css_class| %>
            <%= link_to tag.name, {:controller => :microposts, :action => :tag, :id => tag.name }, :class => css_class %>
          <% end %>
        </div>
      </div>
      <div id="main_column">
        <%- if show_title? -%>
          <h1><%=h yield(:title) %></h1>
        <%- end -%>
        <%= yield %>
      </div>
    </div>
  </body>
</html>
