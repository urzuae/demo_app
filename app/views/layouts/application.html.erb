<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html>
  <head>
    <title><%= h(yield(:title) || "Demo App") %></title>
    <%= stylesheet_link_tag 'application' %>
    <%= javascript_include_tag :defaults %>
    <%= yield(:head) %>
  </head>
  <body>
    <div id="container">
      <div id="first_column">
        <div id="main_menu">
            <div id="users">
              <a class="menu_header" href="/users">Users</a>
              <div> <a class="menu_element users" href="/users">-Index</a></div>
              <div> <a class="menu_element users" href='/users/new'>-New User</a></div>
            </div><br/>
            <div id="microposts">
              <a class="menu_header" href="/microposts">Microposts</a>
              <div><a class="menu_element microposts" href="/microposts">-Index</a></div>
              <div><a class="menu_element microposts" href="/microposts/new">-New Micropost</a></div>
            </div>
        </div>
        <div id="cloud">
          <% tag_cloud (tag_cloud_render, %w[css1 css2 css3 css4]) do |tag, css_class| %>
            <%= link_to tag.name, {:controller => :microposts, :action => :tag, :id => tag.name }, :class => css_class %>
          <% end %>
        </div>
      </div>
      <div id="main_column">
        <%- if show_title? -%>
          <h1><%=h yield(:title) %></h1>
        <%- end -%>
        <%= yield %>
      </div>
    </div>
  </body>
</html>
