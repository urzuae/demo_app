<title>Listing Microposts</title>
<h1>Listing Microposts</h1>
<p><small><%= link_to 'New', new_micropost_path %> | <%= link_to 'Users', users_path %></small></p>

<div id="cloud">
  <% tag_cloud (@tags, %w[css1 css2 css3 css4]) do |tag, css_class| %>
    <%= link_to tag.name,  { :action => :tag, :id => tag.name }, :class => css_class %>
  <% end %>
</div>
<table>
  <tr>
    <th>User</th>
    <th>Content</th>
  </tr>
  <%= render @microposts %>
</table>
