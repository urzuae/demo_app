<title>New Micropost</title>
<h1>New Micropost</h1>
<p><small><%= link_to 'Main', microposts_path %></small></p>

<% form_for @micropost do |f| %>
  <table>
    <tr>
      <td><%= f.label :user_id %></td>
      <td><%= f.collection_select :user_id, @users, :id, :name, :prompt => true %> <%= error_message_on @micropost, :user_id, :prepend_text => "This field " %></td>
    </tr>
    <tr>
      <td><%= f.label :tag_list %></td>
      <td><%= f.text_field :tag_list %> <small>(Separated by commas)</small></td>
    </tr>
    <tr>
      <td><%= f.label :content %></td>
      <td><%= f.text_area :content, :rows => 5, :cols => 50 %></td>
      <td><%= error_message_on @micropost, :content, :prepend_text => "This field " %></td>
    </tr>
    <tr><td></td><td><%= f.submit 'Create Micropost' %></td></tr>
  </table>
<% end %>